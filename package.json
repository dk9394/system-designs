{
	"name": "webpack-typescript-codebase",
	"version": "1.0.0",
	"description": "Webpack typescript boilerplate codebase",
	"main": "index.js",
	"scripts": {
		"start": "webpack serve --mode development",
		"build": "webpack --mode production",
		"format": "prettier --write .",
		"check-format": "prettier --check .",
		"test": "jest",
		"prepare": "husky"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@types/jest": "^29.5.14",
		"clean-webpack-plugin": "^4.0.0",
		"css-loader": "^7.1.2",
		"eslint": "^9.28.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.1",
		"eslint-webpack-plugin": "^5.0.2",
		"globals": "^16.2.0",
		"html-webpack-plugin": "^5.6.3",
		"husky": "^9.1.7",
		"jest": "^30.0.0",
		"jest-environment-jsdom": "^30.0.0",
		"lint-staged": "^16.1.0",
		"prettier": "^3.5.3",
		"style-loader": "^4.0.0",
		"ts-jest": "^29.4.0",
		"ts-loader": "^9.5.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.34.0",
		"webpack": "^5.99.9",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.2"
	},
	"lint-staged": {
		"*.js": [
			"eslint",
			"prettier --write"
		],
		"*.ts": [
			"eslint",
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		],
		"*.css": [
			"prettier --write"
		],
		"*.scss": [
			"prettier --write"
		],
		"*.spec.ts": [
			"jest --bail --findRelatedTests"
		]
	},
	"type": "module"
}
